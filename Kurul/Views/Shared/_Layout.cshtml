<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - My Application</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    @RenderSection("Styles", required: false)
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <header class="bg-blue-600 p-4">
        <div class="container mx-auto">
            <div class="flex justify-between items-center">
                <h1 class="text-white text-3xl">@ViewBag.Title</h1>
                <nav>
                    <ul class="flex space-x-4">
                        <li><a href="/" class="text-white hover:text-blue-300">Home</a></li>
                        <li><a href="/Home/About" class="text-white hover:text-blue-300">About</a></li>
                        <li><a href="/Home/Contact" class="text-white hover:text-blue-300">Contact</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <main class="container mx-auto py-6">
        @RenderBody()
    </main>

    <footer class="bg-blue-600 text-white p-4 mt-6">
        <div class="container mx-auto text-center">
            <p>&copy; @DateTime.Now.Year - My Application</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>

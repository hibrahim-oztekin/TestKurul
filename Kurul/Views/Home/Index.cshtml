@{
    ViewBag.Title = "Home Page";
}

<div class="container mx-auto p-4">
    <div class="flex flex-wrap">
        <!-- Left Column -->
        <div class="w-full md:w-2/3 p-2">
            <div class="bg-white border shadow-md rounded-lg">
                <div class="p-4">
                    <div class="mt-4">
                        <div class="mb-4">
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pt-1">
                                    <em class="fas fa-search text-red-500"></em>
                                </div>
                                <input type="text"
                                       class="pl-10 py-2 border rounded-lg w-full shadow-md focus:outline-none focus:ring-2 focus:ring-red-500"
                                       placeholder="Sorularda Ara...">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="w-full md:w-1/3 p-2">
            <div class="bg-white border shadow-md rounded-lg">
                <div class="p-4">
                    <h6 class="font-semibold">Ankara - <small>@DateTime.Now.ToShortDateString() - 12 Rebiul Evvel 1443</small></h6>
                    <table class="table-auto w-full mt-4 text-center">
                        <tr>
                            <td>İmsak: 05:30</td>
                            <td class="bg-green-100">Güneş: 07:00</td>
                            <td>Öğle: 12:59</td>
                        </tr>
                        <tr>
                            <td>İkindi: 16:45</td>
                            <td>Akşam: 20:15</td>
                            <td>Yatsı: 21:30</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Carousel Section -->
        <div class="w-full md:w-2/3 p-2">
            <div class="relative w-full  mx-auto">
                <!-- Carousel Wrapper -->
                <div class="overflow-hidden relative h-64 rounded-lg shadow-lg">
                    <!-- Slides -->
                    <div id="carouselSlides" class="flex transition-transform duration-500 ease-in-out">
                        <div class="w-full flex-shrink-0">
                            <img src="https://via.placeholder.com/800x400/ff7f7f/333333?text=Slide+1" class="w-full h-64 object-cover">
                        </div>
                        <div class="w-full flex-shrink-0">
                            <img src="https://via.placeholder.com/800x400/7f7fff/333333?text=Slide+2" class="w-full h-64 object-cover">
                        </div>
                        <div class="w-full flex-shrink-0">
                            <img src="https://via.placeholder.com/800x400/7fff7f/333333?text=Slide+3" class="w-full h-64 object-cover">
                        </div>
                    </div>
                </div>

                <!-- Previous Button -->
                <button id="prevButton" class="absolute top-1/2 left-0 transform -translate-y-1/2 bg-gray-800 bg-opacity-50 text-white p-2 rounded-full hover:bg-gray-700">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                </button>

                <!-- Next Button -->
                <button id="nextButton" class="absolute top-1/2 right-0 transform -translate-y-1/2 bg-gray-800 bg-opacity-50 text-white p-2 rounded-full hover:bg-gray-700">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>

        </div>

        <!-- Links Section -->
        <div class="w-full md:w-1/3 p-2">
            <div class="grid grid-cols-2 gap-2">
                <div class="bg-white border rounded-lg p-4">
                    <a href="#" class="flex items-center space-x-2">
                        <i class="fa-solid fa-person-circle-question fa-2x text-red-500"></i>
                        <span class="font-semibold">Dini Soru Sor</span>
                    </a>
                </div>
                <div class="bg-white border rounded-lg p-4">
                    <a href="#" class="flex items-center space-x-2">
                        <i class="fa-regular fa-circle-question fa-2x text-red-500"></i>
                        <span class="font-semibold">Sıkça Sorulanlar</span>
                    </a>
                </div>
                <div class="bg-white border rounded-lg p-4 col-span-2">
                    <a href="#" class="flex items-center space-x-2">
                        <i class="fa-solid fa-mosque fa-2x text-red-500"></i>
                        <span class="font-semibold">Dini Bilgiler</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Güncel Sorular Section -->
        <div class="w-full md:w-3/3 p-2">
            <div class="bg-white border rounded-lg p-4">
                <div class="flex justify-between items-center">
                    <h6 class="text-primary font-semibold">Güncel Sorular</h6>
                    <a href="#" class="text-sm text-blue-500">Tamamını Listele</a>
                </div>
                <div class="mt-4">
                    <div class="flex items-center mb-2">
                        <em class="icon ni ni-youtube mr-2"></em>
                        <div>
                            <span class="font-semibold">Oruç İbadetinin Hikmet ve Faydaları</span>
                            <br>
                            <span class="text-sm text-gray-500">İbadetler - Oruç</span>
                        </div>
                    </div>
                    <div class="flex items-center mb-2">
                        <em class="icon ni ni-youtube mr-2"></em>
                        <div>
                            <span class="font-semibold">Oruç İbadetinin Hikmet ve Faydaları</span>
                            <br>
                            <span class="text-sm text-gray-500">İbadetler - Oruç</span>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <em class="icon ni ni-youtube mr-2"></em>
                        <div>
                            <span class="font-semibold">Oruç İbadetinin Hikmet ve Faydaları</span>
                            <br>
                            <span class="text-sm text-gray-500">İbadetler - Oruç</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Konularına Göre Sorular Section -->
        <div class="w-full p-2">
            <div class="bg-white border rounded-lg p-4">
                <h6 class="font-semibold mb-4">Konularına Göre Sorular</h6>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <ul class="space-y-2">
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> İslam İnancı</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Mezhepler ve Dini Oluşumlar</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Temizlik (Taharet)</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Namaz</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Oruç</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Zekat ve Sadaka</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Hac ve Umre</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Kurban</a></li>
                    </ul>
                    <ul class="space-y-2">
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Helal ve Haramlar</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Helal Ürün ve Hizmet</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Adak ve Yemin</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> İbadet, Dua, Tövbe</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Kur'an-ı Kerim'in Muhtevası, İcazı ve Tarihi</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Aile Hayatı</a></li>
                    </ul>
                    <ul class="space-y-2">
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Tasavvuf</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Dini-Milli Gün ve Geceler</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Din Hizmetleri</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Cenaze ve Defin İşlemleri</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Din ve Toplum</a></li>
                        <li><a href="#" class="flex items-center"><em class="icon ni ni-chat-circle mr-2"></em> Sosyal ve Kültürel Konular</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Slider Section -->
        <div class="w-full p-2">
            <div class="bg-white border rounded-lg p-4">
                <h6 class="font-semibold mb-4">Yayınlar</h6>
                <div id="publicationSlider" class="flex space-x-4 overflow-x-scroll">
                    <div class="bg-gray-100 rounded-lg p-4 flex-shrink-0">
                        <img src="" alt="..." class="rounded-lg w-full">
                    </div>
                    <div class="bg-gray-100 rounded-lg p-4 flex-shrink-0">
                        <img src="" alt="..." class="rounded-lg w-full">
                    </div>
                    <div class="bg-gray-100 rounded-lg p-4 flex-shrink-0">
                        <img src="" alt="..." class="rounded-lg w-full">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
